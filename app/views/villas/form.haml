.property-form-container
  %h2
    = "#{action_name.camelize} #{@klass_underscore.split('_').last.camelize}"
  = simple_form_for(@property) do |f|
    = f.input :place, label: 'Place', input_html: {class: 'place-filter-field'}
    .suggestions.places.d-none
    = f.input :expected_price, label: 'Rent'
    = f.input :area, label: 'Area in square feets'
    = f.input :landmark
    = f.input :img1, label: "photo (required)", required: true
    - if current_user.admin?
      %h3
        Admin section
      = f.input :district, collection: [["Thiruvananthapuram", "Thiruvananthapuram"], ["Kollam", "Kollam"], ["Alappuzha", "Alappuzha"], ["Pathanamthitta", "Pathanamthitta"], ["Kottayam", "Kottayam"], ["Idukki", "Idukki"], ["Ernakulam", "Ernakulam"], ["Thrissur", "Thrissur"], ["Palakkad", "Palakkad"], ["Malappuram", "Malappuram"], ["Kozhikode", "Kozhikode"], ["Wayanadu", "Wayanadu"], ["Kannur", "Kannur"], ["Kasaragod", "Kasaragod"]]
      = f.input :visible_caption
      = f.input :tags
    = f.submit 'Submit'
  = link_to 'cancel', villas_path