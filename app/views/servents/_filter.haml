.filter-container
  .h3
    Search Servents to hire
  .filter
    = form_with(url: '/index', method: 'get', class: 'filter-form') do
      .place-filter
        = label_tag 'Nearby Place'
        .clearfix
        = text_field_tag 'place', session[:place], class: 'place-filter-field'
        .suggestions.d-none
      .budget-filter
        = label_tag 'Budget'
        .clearfix
        = text_field_tag 'price1', nil, class: 'filter-field'
        to
        = text_field_tag 'price2', nil, class: 'filter-field pull-right'
        .clearfix
      
      = hidden_field_tag 'filtering', 'true'
      = hidden_field_tag  'state', params[:state]
